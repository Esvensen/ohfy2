/* Navigation */
.navbar {
  height: 100px;
  width: 100%;
  position: fixed;
  z-index: 666;
  top: 0;
  background-color: #fff;
  transition: background-color 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-container {
  max-width: var(--max-width);
  width: 100%;
  padding: 0 48px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  margin: 0 auto;
}

.nav-logo img {
  height: 60px;
  width: auto;
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 30px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-item {
  position: relative;
}

/* Dropdown Styles */
.dropdown {
  position: relative;
}

.dropdown-trigger {
  cursor: url("/assets/img/litcross.cur"), pointer;
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  background-color: white;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  list-style: none;
  margin: 0;
  padding: 0.5rem 0;
  min-width: 150px;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  z-index: 1000;
}

.dropdown:hover .dropdown-menu {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-link {
  display: block;
  padding: 0.5rem 1rem;
  color: var(--primary-black);
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  font-family: var(--nav-font);
  transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: url("/assets/img/litcross.cur"), pointer;
}

.dropdown-link:hover {
  background-color: #f5f5f5;
}

/* Records Page Navbar Dark Theme */
body.records-dark-theme .navbar {
  background-color: #000;
  transition: background-color 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

body.records-dark-theme .nav-link {
  color: white;
}

body.records-dark-theme .nav-link:hover {
  color: white;
  cursor: url("/assets/img/litcross.cur"), pointer;
}

body.records-dark-theme .dropdown-trigger {
  color: white;
  cursor: url("/assets/img/litcross.cur"), pointer;
}

body.records-dark-theme .dropdown-menu {
  background-color: #333;
  border: 1px solid #555;
}

body.records-dark-theme .dropdown-link {
  color: white;
}

body.records-dark-theme .dropdown-link:hover {
  background-color: #444;
}

body.records-dark-theme .nav-logo img {
  filter: invert(1) brightness(100%);
}

/* Events Page Styles */
.events-images {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  padding: 2rem;
  max-width: 1400px;
  margin: 150px auto 0 auto;
  justify-items: center; /* This centers items in their grid cells */
}

@media (max-width: 920px) {
  .events-images {
    margin: 16px auto 0 auto;
  }
}

/* Center the last row items when there are fewer than 4 */
.events-images .imgholder:nth-last-child(-n + 2):nth-child(4n + 1),
.events-images
  .imgholder:nth-last-child(-n + 2):nth-child(4n + 1)
  ~ .imgholder {
  grid-column: span 2;
  max-width: 50%;
}

.events-images .imgholder {
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.events-images .imgholder img {
  width: 100%;
  height: auto; /* This preserves aspect ratio */
  object-fit: contain; /* This prevents cropping */
  transition: transform 0.3s;
}

.events-images .imgholder img:hover {
  transform: scale(1.02);
}

/* Mobile responsive for events */
@media only screen and (max-width: 920px) {
  .events-images {
    grid-template-columns: 1fr; /* Single column on mobile */
    gap: 1.5rem;
    padding: 1rem;
  }

  /* Reset the centering on mobile */
  .events-images .imgholder:nth-last-child(-n + 2):nth-child(4n + 1),
  .events-images
    .imgholder:nth-last-child(-n + 2):nth-child(4n + 1)
    ~ .imgholder {
    grid-column: span 1;
    max-width: 100%;
  }
}

/* Artists Page Styles */
