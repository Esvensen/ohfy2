/* Splash Page */
.splash {
  height: 100vh;
  height: calc(var(--vh, 1vh) * 100);
  width: 100%;
  overflow: hidden;
  outline: 3px solid #333333;
  outline-offset: -15px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  background-color: white;
  position: relative;
}

.corner-links {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none; /* Allow clicks to pass through */
}

.corner-link {
  position: absolute;
  pointer-events: all; /* Re-enable clicks on the links */
  font-size: 48px;
  font-style: italic;
  font-weight: 600;
  color: #333;
  text-decoration: none;
  font-family: "Edda", var(--body-font);
  transition: all 0.3s;
}

.corner-link:hover {
  text-decoration: underline;
  cursor: url("/assets/img/litcross.cur"), pointer;
}

.top-left {
  top: 60px;
  left: 60px;
}

.top-right {
  top: 60px;
  right: 60px;
}

.bottom-left {
  bottom: 60px;
  left: 60px;
}

.bottom-right {
  bottom: 60px;
  right: 60px;
}

