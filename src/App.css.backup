}

.booking-form label {
  font-family: "Spectral", serif;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: block;
  margin-bottom: 4px;
}
.booking-form input,
.booking-form select {
  border: none;
  border-bottom: 2px solid #000;
  padding: 0.6rem 0;
  background: transparent;
  width: 100%;
}
.booking-form .two-col {
  display: flex;
  gap: 16px;
  gap: 64px;
}

.booking-form button {
  width: 100%;
  cursor: url("/assets/img/litcross.cur"), pointer;
}
@media (max-width: 920px) {
  .booking-form .two-col {
    flex-direction: column;
    gap: 32px;
  }
}
.booking-form .checkboxes {
  display: flex;
  gap: 32px;
  margin-top: 4px;
}
.booking-form .check {
  font-size: 0.9rem;
}

.button {
  padding: 1rem 2rem;
  background-color: #000;
  color: #fff;
  border: none;
  cursor: url("/assets/img/litcross.cur"), pointer;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.button:hover {
  background-color: #333;
}

/* FAQ */
.faq {
  max-width: 900px;
  margin: 0 auto;
  padding: 3rem 2rem;
  margin-top: 100px;
}

@media (max-width: 768px) {
  .faq {
    margin-top: 24px;
  }
}

.faq h2 {
  font-size: 2.5rem;
  margin-bottom: 2rem;
  text-transform: uppercase;
}

.accordion {
  background-color: #f1f1f1;
  color: #000;
  cursor: url("/assets/img/litcross.cur"), pointer;
  padding: 1.25rem;
  width: 100%;
  text-align: left;
  border: none;
  outline: none;
  transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 1rem;
  font-weight: bold;
  margin-top: 0.5rem;
}

.accordion:hover {
  background-color: #ddd;
}

.panel {
  padding: 0 1.25rem;
  background-color: white;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
}

.panel.active {
  max-height: 500px;
  padding: 1.25rem;
  border: 1px solid #ddd;
  border-top: none;
}

/* Policy */
.policy .copy {
  max-width: 800px;
  margin: 0 auto;
  padding: 3rem 2rem;
  margin-top: 100px;
}

.policy .copy p {
  margin-bottom: 1rem;
  line-height: 1.8;
}

.page-container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 2rem;
}

/* Footer */
.footer {
  transition: background-color 0.6s cubic-bezier(0.4, 0, 0.2, 1),
    color 0.6s ease;
  background-color: #fff;
  color: var(--primary-black);
  padding: 2rem;
  text-align: center;
  margin-top: auto;
}

.footer-content {
  max-width: var(--max-width);
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.footer-link {
  color: var(--primary-black);
  text-decoration: none;
  transition: opacity 0.3s;
}

.footer-link:hover {
  opacity: 0.8;
}

.footer-dark {
  background-color: #000;
  color: #fff;
}
.footer-dark .footer-link {
  color: #fff;
}

/* Mobile Responsive Design */
@media only screen and (max-width: 920px) {
  /* Navigation Mobile */
  .nav-container {
    padding: 0 1rem;
    flex-direction: column;
    gap: 1rem;
    height: auto;
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .navbar {
    height: auto;
    min-height: 100px;
  }

  .nav-logo img {
    height: 40px;
  }

  .nav-links {
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .dropdown-menu {
    position: static;
    opacity: 1;
    visibility: visible;
    transform: none;
    box-shadow: none;
    border: none;
    background: none;
    padding: 0;
    margin-top: 0.5rem;
  }

  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-link {
    padding: 0.25rem 0.5rem;
    font-size: 12px;
  }

  /* Splash Page Mobile */
  .splash {
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
  }

  .corner-links {
    position: static;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    margin-top: 2rem;
    order: 2;
  }

  .corner-link {
    position: static;
    font-size: 24px !important;
  }

  .reaper-container {
    width: 400px;
    height: 275px;
    order: 1;
  }

  /* General Layout Mobile */
  .row {
    flex-direction: column;
    margin: 100px 0;
    height: auto;
  }

  .image {
    width: auto !important;
    max-height: 500px !important;
  }

  .copy {
    max-width: 90% !important;
  }

  .review-row {
    flex-direction: column;
  }

  .portraits {
    flex-direction: column;
    gap: 32px;
  }

  .additionalImages {
    grid-template-columns: 1fr;
  }

  .footer-content {
    flex-direction: column;
    text-align: center;
    padding-bottom: 100px;
  }
}

@media only screen and (max-width: 700px) {
  p,
  form {
    font-size: 15px;
  }

  h2 {
    font-size: 24px;
  }

  h3 {
    font-size: 15px;
    line-height: 140% !important;
  }

  .imageText img.image {
    height: 300px;
  }

  .row {
    max-width: 80%;
    height: auto;
  }
}
