  height: 600px;
  pointer-events: none;
  z-index: 1;
  opacity: 0.45;
}
.artist-image-overlay img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.artist-bg {
  position: fixed;
  inset: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0.15;
  pointer-events: none;
  z-index: 1;
}

@media (max-width: 768px) {
