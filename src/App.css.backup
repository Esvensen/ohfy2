/* Import Google Fonts */
@import url("https://fonts.googleapis.com/css2?family=Spectral:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap");

/* Custom Fonts */
@font-face {
  font-family: "Edda";
  src: url("/assets/fonts/edda.woff2") format("woff2"),
    url("/assets/fonts/edda.woff") format("woff");
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

/* CSS Reset */
html,
body,
div,
span,
applet,
object,
iframe,
h1,
h2,
h3,
h4,
h5,
h6,
p,
blockquote,
pre,
a,
abbr,
acronym,
address,
big,
cite,
code,
del,
dfn,
em,
img,
ins,
kbd,
q,
s,
samp,
small,
strike,
strong,
sub,
sup,
tt,
var,
b,
u,
i,
center,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
form,
label,
legend,
table,
caption,
tbody,
tfoot,
thead,
tr,
th,
td,
article,
aside,
canvas,
details,
embed,
figure,
figcaption,
footer,
header,
hgroup,
menu,
nav,
output,
ruby,
section,
summary,
time,
mark,
audio,
video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
  display: block;
}

ol,
ul {
  list-style: none;
}

blockquote,
q {
  quotes: none;
}

blockquote:before,
blockquote:after,
q:before,
q:after {
  content: "";
  content: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* Variables */
:root {
  --vh: 1vh;
  --primary-black: #2a2a2a;
  --max-width: 1100px;
  --breakpoint-large: 920px;
  --breakpoint-small: 700px;
  --nav-font: "Spectral", serif;
  --heading-font: "Spectral", serif;
  --body-font: "Spectral", serif;
}

html {
  min-height: 100%;
  position: relative;
}

body {
  cursor: url("/assets/img/bloodstainedcross.cur"), auto;
  background-color: #fff;
  transition: background-color 0.6s cubic-bezier(0.4, 0, 0.2, 1),
    color 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  overflow-y: scroll;
  font-family: var(--body-font);
  margin: 0;
  padding: 0;
}

/* Hide desktop navbar on mobile */
@media (max-width: 919px) {
  .navbar {
    display: none;
  }
}

/* Mobile Bottom Nav */
.mobile-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  padding: 8px 16px;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mobile-nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #000;
  text-decoration: none;
  font-family: "Spectral", serif;
  font-size: 12px;
  text-transform: uppercase;
  gap: 4px;
}
.mobile-nav-item img {
  width: 48px;
  height: 48px;
}
.mobile-nav-item.active span {
  font-weight: 600;
}

@media (min-width: 920px) {
  .mobile-bottom-nav {
    display: none;
  }
}

/* Tattoo Top Nav */
.tattoo-top-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #fff;
  padding: 12px 16px;
  display: flex;
  justify-content: space-between;
  font-family: "Spectral", serif;
  font-size: 12px;
  text-transform: uppercase;
  border: none;
}
.tattoo-top-nav a {
  color: #000;
  text-decoration: none;
}
.tattoo-top-nav a.active {
  text-decoration: underline;
}

@media (min-width: 920px) {
  .tattoo-top-nav {
    display: none;
  }
}

/* Invert colours on Records page dark theme */
body.records-dark-theme .navbar img {
  filter: invert(1);
}
body.records-dark-theme .navbar .nav-link {
  color: #fff;
}
body.records-dark-theme .dropdown-trigger,
body.records-dark-theme .dropdown-link {
  color: #fff;
}
body.records-dark-theme .mobile-bottom-nav {
  background: #000;
}
body.records-dark-theme .mobile-bottom-nav .mobile-nav-item span {
  color: #fff;
}
body.records-dark-theme .mobile-bottom-nav .mobile-nav-item img {
  filter: invert(1);
}

/* Transition for nav elements */
.navbar img,
.mobile-bottom-nav img {
  transition: filter 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}
.navbar .nav-link,
.dropdown-trigger,
.dropdown-link,
.mobile-bottom-nav .mobile-nav-item span {
  transition: color 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}
.mobile-bottom-nav {
  transition: background-color 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Records Page Dark Theme */
body.records-dark-theme {
  /* existing body background */
  background-color: #000;
}

.App {
